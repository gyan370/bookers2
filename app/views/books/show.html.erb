<div class="container">
 <div class="row">
 <div class="col-md-3">
 <%= render 'book', user: @book.user %>
 </div> 
 <div class="col-md-8 offset-md-1">
<h1>Book detail</h1>
<div>
  <%= image_tag @book.get_image %>
   <p><%= link_to @book.user.name, user_path(@book.user) %></p>
    <p><%= link_to @book.title,book_path(@book) %></p>
    <p><%= @book.body %></p>
    
      <% if @book.user == current_user %>
      <%= link_to "Edit", edit_book_path(@book.id) %>
      <%= link_to "Destroy", book_path(@book), method: :delete %>
  <% end %>
  </div>
  </div>
  </div>
</div>