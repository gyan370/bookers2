<div class="container">  
 <div class="row">
 <div class="col-md-3"> 
  <%= render 'books/book', user: @user %>
  </div> 
  <div class="col-md-8 offset-md-1">
  <h1>books</h1>
  <% @books.each do |book| %>
  <div>
     <%= link_to image_tag(book.user.get_profile_image(100,100)), user_path(book.user) %>
  <p>Title：<%= link_to book.title, book_path(book) %></p>
  <p>Opinion：<%= book.body %></p>
  <% end %>
  </div>
  </div>
  </div>
</div>